<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addressLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/app_bar_layout"/>


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/sv_feature"
            android:layout_marginTop="0dp">

            <LinearLayout
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >



                    <TextView
                        android:id="@+id/about_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Native, work and current location"
                        android:textColor="@color/description_text"
                        android:textSize="19sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="4dp">


                    <LinearLayout
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Permanent Address"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/permanant_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dark_gray"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Permanant State"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/permanant_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>


                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Permanant District"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/permanant_district"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>


                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Permanent Taluka"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/permanant_taluka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>


                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Permanant Village"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/permanant_village"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>


                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Address"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/current_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>
                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current State"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/current_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>
                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current District"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/current_district"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>
                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>


                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Tahsil"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/current_taluka"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>
                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>




                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Village"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/current_village"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>
                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>




                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work Location"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/work_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>
                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work State"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/work_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>

                        <LinearLayout
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work City"
                                android:textSize="14sp"
                                android:textColor="@color/Gray" />

                            <TextView
                                android:layout_marginTop="5dp"

                                android:id="@+id/work_city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/dark_gray" />

                        </LinearLayout>

                        <View
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="0.5dp"
                            android:layout_width="match_parent"
                            android:background="@color/LightGrey"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </ScrollView>



        <!--internet code-->

        <include
            layout="@layout/internet_layout"/>

        <!--end internet code-->
    </RelativeLayout>

</LinearLayout>

