<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/mainConnectionLL">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <include
                layout="@layout/matches_ebook_layout"/>

            <LinearLayout
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/sv_posting_screen">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/connectionLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.tabs.TabLayout
                            android:paddingBottom="3dp"
                            app:tabMode="scrollable"
                            app:tabIndicatorHeight="0dp"
                            android:id="@+id/tabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabGravity="fill"
                            app:tabBackground="@android:color/transparent"
                            app:tabRippleColor="@null"
                            app:tabPaddingStart="0dp"
                            app:tabPaddingEnd="0dp"
                            app:tabTextColor="@color/Gray">

                        </com.google.android.material.tabs.TabLayout>

                        <com.WadhuWarProject.WadhuWar.extras.HeightWrappingViewPager
                            android:id="@+id/pager"
                            android:background="@color/white"
                            android:layout_marginTop="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.WadhuWarProject.WadhuWar.extras.HeightWrappingViewPager>

                    </LinearLayout>


                    <!--end conenction and pending req tab -->




                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>
</LinearLayout>