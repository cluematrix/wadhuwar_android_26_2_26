<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray2"
    android:orientation="vertical"

    android:paddingLeft="25dp"
    android:paddingRight="25dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Registration of Bride and Groom's name only!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" ( केवल दूल्हा और दुल्हन के नाम का पंजीकरण! )"
        android:textColor="@color/black"
        android:textSize="13sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp"
        android:text="* Certain fields are mandatory."
        android:textColor="@color/Gray"
        android:textSize="12sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="* Email Id / ईमेल आईडी"
        android:textColor="@color/shade_black1"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittxt_gray_line"
        android:inputType="textEmailAddress"
        android:padding="9dp"
        android:singleLine="true"
        android:importantForAutofill="yes"
        android:hint="email"
        android:autofillHints="emailAddress"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Alternate Email Id/ वैकल्पिक ईमेल आईडी"
        android:textColor="@color/shade_black1"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/alternate_email"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittxt_gray_line"
        android:inputType="textEmailAddress"
        android:padding="9dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="*Mobile"
        android:textColor="@color/shade_black1"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:padding="8dp"
            android:background="@drawable/edittxt_for_nineone"
            android:enabled="false"
            android:text="+91"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/edittxt_gray_line"
            android:inputType="number"
            android:maxLength="10"
            android:padding="9dp"
            android:singleLine="true"

            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="*Whatsapp No / व्हाट्सएप नंबर"
        android:textColor="@color/shade_black1"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:padding="8dp"
            android:background="@drawable/edittxt_for_nineone"
            android:enabled="false"
            android:text="+91"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/whatapp_mobile"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/edittxt_gray_line"
            android:inputType="number"
            android:maxLength="10"
            android:padding="9dp"
            android:singleLine="true"
            android:textColor="@color/black"

            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="*Password / पासवर्ड"
        android:textColor="@color/shade_black1"
        android:textSize="15dp" />

<!--    <EditText-->
<!--        android:id="@+id/password"-->
<!--        android:layout_width="match_parent"-->

<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:background="@drawable/edittxt_gray_line"-->
<!--        android:inputType="textPassword"-->
<!--        android:padding="9dp"-->
<!--        android:singleLine="true"-->
<!--        android:textColor="@color/black"-->
<!--        android:textSize="15dp" />-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittxt_gray_line"
            android:padding="9dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="*Confirm Password / पासवर्ड की पुष्टि कीजिये"
        android:textColor="@color/shade_black1"
        android:textSize="15dp" />

<!--    <EditText-->
<!--        android:id="@+id/confirm_password"-->
<!--        android:layout_width="match_parent"-->

<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:background="@drawable/edittxt_gray_line"-->
<!--        android:inputType="textPassword"-->
<!--        android:padding="9dp"-->
<!--        android:singleLine="true"-->
<!--        android:textColor="@color/black"-->
<!--        android:textSize="15dp" />-->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="password_toggle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittxt_gray_line"
            android:inputType="textPassword"
            android:padding="9dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Reference Code (Optional)"
        android:textColor="@color/shade_black1"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/reference_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittxt_gray_line"
        android:padding="9dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <RelativeLayout
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/continue_btn_bg"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp">

        <TextView
            android:id="@+id/next_btn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>


    <include layout="@layout/below_next_btn_layout" />


</LinearLayout>