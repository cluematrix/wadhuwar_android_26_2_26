<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/just_joind_cv"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="13dp"
        android:elevation="19dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/justjoinL"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp"
                    app:strokeColor="@color/Red"
                    app:strokeWidth="1dp">
                    <TextView
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:textStyle="bold|italic"
                        android:textAllCaps="true"
                        android:textColor="@color/Red"
                        android:text="JUST JOINED!" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/close_btn"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="22dp"
                    android:layout_width="22dp"
                    android:background="@drawable/close_img"/>


            </RelativeLayout>


            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_weight="1.5"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/upgrade_btn"
                    android:id="@+id/t1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Only Premium Members can Connect with them."
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:id="@+id/upgrade_now_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curve_blue_btn_bg"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:paddingTop="8dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="8dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upgrade Now"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"/>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>