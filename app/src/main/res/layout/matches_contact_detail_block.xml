<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_marginTop="13dp"
    android:background="@drawable/b"
    android:layout_margin="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    app:cardCornerRadius="5dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/description_text"
                android:text="Contact Details"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_alignParentRight="true"

                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_king_red" />

        </RelativeLayout>





        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/contact_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/red_circle" />

                    <ImageView
                        android:layout_width="19dp"

                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_local_phone_24" />

                </FrameLayout>

                <RelativeLayout
                    android:layout_toRightOf="@+id/contact_img"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:id="@+id/contact_txt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/Gray"
                        android:text="Contact No."/>


                    <TextView
                        android:layout_below="@+id/contact_txt"
                        android:id="@+id/contact_no"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:text="+9112346454"/>

                    <ImageView
                        android:layout_below="@+id/contact_txt"
                        android:layout_toRightOf="@+id/contact_no"
                        android:layout_height="18dp"
                        android:layout_width="18dp"
                        android:layout_marginLeft="7dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/ic_baseline_lock_24"
                        />



                </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/email_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/red_circle" />

                    <ImageView
                        android:layout_gravity="center"

                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:background="@drawable/ic_baseline_email_24"/>

                </FrameLayout>

                <RelativeLayout
                    android:layout_toRightOf="@+id/email_img"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:id="@+id/email_txt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/Gray"
                        android:text="Email ID"/>


                    <TextView
                        android:layout_below="@+id/email_txt"
                        android:id="@+id/email"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:text="a@gmail.com"/>

                    <ImageView
                        android:layout_below="@+id/email_txt"
                        android:layout_toRightOf="@+id/email"
                        android:layout_height="18dp"
                        android:layout_width="18dp"
                        android:layout_marginLeft="7dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/ic_baseline_lock_24"
                        />



                </RelativeLayout>




            </LinearLayout>




            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/Gray"/>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="To unlock Contact No. &amp; Email ID"
                android:textColor="@color/description_text"
                android:layout_gravity="center_horizontal"/>




            <LinearLayout
                android:layout_marginBottom="13dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/curved_rectangle_blue_border">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Go Premium Now"
                    android:textSize="16sp"
                    android:textColor="@color/pharma"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>





        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

