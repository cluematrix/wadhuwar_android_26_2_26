<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginRight="3dp"
    android:layout_marginLeft="3dp"
    android:layout_width="180dp"
    android:background="@drawable/gray_box"
    android:id="@+id/mathcesLL"
    android:layout_height="310dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/topFL"
            android:layout_width="match_parent"
            android:layout_height="180dp">


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/default_Avtar_LL"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center_horizontal"
                android:background="@color/gray1"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/img2"
                    android:layout_marginTop="16dp"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    />
                <TextView
                    android:textColor="@color/Gray"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Photo not added"/>

            </LinearLayout>


            <com.WadhuWarProject.WadhuWar.extras.ProportionalImageView
                android:visibility="gone"
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true" />

            <FrameLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg" >
                <RelativeLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/name"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JUST JOINED!"
                        android:textSize="12sp"
                        android:background="@color/white"
                        android:textStyle="italic|bold"
                        android:textColor="@color/Red"
                        />
                </RelativeLayout>


            </FrameLayout>





        </FrameLayout>



        <TextView
            android:layout_below="@+id/topFL"
            android:id="@+id/age_height_mothertoung"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray"
            android:textSize="14sp" />

        <TextView
            android:layout_below="@+id/age_height_mothertoung"
            android:id="@+id/caste"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray"
            android:textSize="14sp" />

        <TextView
            android:layout_below="@+id/caste"
            android:id="@+id/address"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"

            android:paddingBottom="1dp"
            android:elevation="3dp">


            <LinearLayout
                android:layout_gravity="bottom"
                android:id="@+id/connect_now_btn"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pharma_box"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/blue_check"
                    android:layout_marginRight="2dp"
                    android:layout_width="19dp"
                    android:layout_height="19dp"/>

                <TextView
                    android:id="@+id/connect_now_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect Now"
                    android:textColor="@color/sky_btn"
                    android:textSize="14sp"
                    />


                <ProgressBar
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/connect_btn_pb"
                    android:layout_height="18dp"
                    android:layout_width="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        </RelativeLayout>


</LinearLayout>