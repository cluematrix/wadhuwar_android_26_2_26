<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:background="@drawable/dialog_update_bg"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:paddingHorizontal="10dp"
        android:paddingVertical="13dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >


        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update info"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_baseline_error_outline_24"
            android:layout_height="24dp"
            android:layout_width="24dp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"

        android:paddingHorizontal="20dp"
        android:justificationMode="inter_word"
        android:text="New version is available. Please update application !"
        android:layout_marginTop="16dp"/>






    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/edit_profile_btn"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >





















        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/update_app_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="UPDATE"
           
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>










</LinearLayout>
