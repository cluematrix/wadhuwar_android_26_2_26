<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_height="match_parent">

    <!--toolbar-->
    <include
        layout="@layout/app_bar_layout"/>
    <!--end toolbar-->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:orientation="vertical">


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lifestyle &amp; Other Attributes"
                        android:textColor="@color/description_text"
                        android:textSize="16sp"
                        />

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="13dp"
                        android:background="@drawable/b"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">





                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:paddingRight="13dp"
                                android:paddingLeft="5dp"
                                android:layout_height="match_parent">



                                <LinearLayout
                                    android:layout_marginTop="13dp"
                                    android:padding="8dp"
                                    android:weightSum="4"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="1.5"
                                        android:text="Birth Time"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="15sp" />


                                    <TextView
                                        android:layout_weight="2.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/birth_time"
                                        android:drawableRight="@drawable/ic_baseline_watch_later_24"
                                        android:background="@drawable/edittxt_gray_line"
                                        android:padding="8dp"
                                        android:textSize="15dp" />



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:padding="8dp"
                                    android:weightSum="4"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_weight="1.5"
                                        android:text="Hobbies"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="15sp" />



                                    <EditText
                                        android:layout_weight="2.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/hobbies"
                                        android:background="@drawable/edittxt_gray_line"
                                        android:padding="8dp"
                                        android:textSize="15dp" />




                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:padding="8dp"
                                    android:weightSum="4"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                    <TextView
                                        android:layout_weight="1.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Marital Status"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="15sp" />



                                    <LinearLayout
                                        android:background="@drawable/edittxt_gray_line_no_padding"
                                        android:layout_weight="2.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <Spinner
                                            android:id="@+id/marital_status_spinner"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>



                                </LinearLayout>



                                <!--===========-->
                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/childLL"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:orientation="vertical">



                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:padding="8dp"
                                        android:weightSum="4"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">



                                        <TextView
                                            android:layout_weight="1.5"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="No. Of Children"
                                            android:textColor="@color/DarkGray"
                                            android:textSize="15sp" />



                                        <LinearLayout
                                            android:background="@drawable/edittxt_gray_line_no_padding"
                                            android:layout_weight="2.5"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content">
                                            <Spinner
                                                android:id="@+id/num_childred_spinner"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>



                                    </LinearLayout>




                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:padding="8dp"
                                        android:weightSum="4"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">



                                        <TextView
                                            android:layout_weight="1.5"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="Children Living Status"
                                            android:textColor="@color/DarkGray"
                                            android:textSize="15sp" />



                                        <LinearLayout
                                            android:background="@drawable/edittxt_gray_line_no_padding"
                                            android:layout_weight="2.5"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content">
                                            <Spinner
                                                android:id="@+id/childred_living_spinner"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content" />

                                        </LinearLayout>



                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_marginTop="10dp"
                                        android:padding="8dp"
                                        android:weightSum="4"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_weight="1.5"
                                            android:text="Children Age"
                                            android:textColor="@color/DarkGray"
                                            android:textSize="15sp" />



                                        <EditText
                                            android:layout_weight="2.5"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/children_age"
                                            android:background="@drawable/edittxt_gray_line"
                                            android:padding="8dp"
                                            android:textSize="15dp" />




                                    </LinearLayout>



                                </LinearLayout>
                                <!--===========-->




                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:padding="8dp"
                                    android:weightSum="4"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                    <TextView
                                        android:layout_weight="1.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Color-Complex"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="15sp" />



                                    <LinearLayout
                                        android:background="@drawable/edittxt_gray_line_no_padding"
                                        android:layout_weight="2.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <Spinner
                                            android:id="@+id/colorcomplex_spinner"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:padding="8dp"
                                    android:weightSum="4"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                    <TextView
                                        android:layout_weight="1.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Blood Group"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="15sp" />



                                    <LinearLayout
                                        android:background="@drawable/edittxt_gray_line_no_padding"
                                        android:layout_weight="2.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <Spinner
                                            android:id="@+id/bloodgroup_spinner"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>



                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:padding="8dp"
                                    android:weightSum="4"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                    <TextView
                                        android:layout_weight="1.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Lifestyle"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="15sp" />



                                    <LinearLayout
                                        android:background="@drawable/edittxt_gray_line_no_padding"
                                        android:layout_weight="2.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <Spinner
                                            android:id="@+id/lifestyle_spinner"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>



                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="10dp"
                                    android:padding="8dp"
                                    android:weightSum="4"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                    <TextView
                                        android:layout_weight="1.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Dietary"
                                        android:textColor="@color/DarkGray"
                                        android:textSize="15sp" />



                                    <LinearLayout
                                        android:background="@drawable/edittxt_gray_line_no_padding"
                                        android:layout_weight="2.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <Spinner
                                            android:id="@+id/dietary_spinner"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>



                                </LinearLayout>


                                <!--==============-->

                                <LinearLayout
                                    android:visibility="visible"
                                    android:id="@+id/update_btn"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="13dp"
                                    android:paddingRight="13dp"
                                    android:paddingTop="8dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_blue_clr"
                                    android:layout_width="wrap_content">
                                    <TextView
                                        android:layout_weight="1.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Update"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="15sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <!--internet code-->

            <include
                layout="@layout/internet_layout"/>

            <!--end internet code-->
        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
