<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_height="match_parent">

    <!--toolbar-->
    <include
        layout="@layout/app_bar_layout"/>
    <!--end toolbar-->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout

            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray2"
                    android:orientation="vertical">


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More About Yourself, Partner and Family"
                        android:textColor="@color/description_text"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(अपने बारे में, जीवन साथी और परिवार का परिचय दीजिये)"
                        android:textColor="@color/Gray"
                        android:textSize="14sp"
                        />


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="13dp"
                        android:background="@drawable/b"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        app:cardCornerRadius="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">



                            <View
                                android:layout_height="0.5dp"
                                android:layout_width="match_parent"
                                android:background="@color/description_text"/>



                            <LinearLayout
                                android:background="@color/sky_btn_light"
                                android:padding="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/ic_baseline_error_24"
                                    android:textSize="12sp"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="You can mention Hobbies, Likes and Dislikes, Partner Preferences, Career plan &amp; Family details."
                                    android:textColor="@color/description_text"
                                    android:textSize="12sp"
                                    />
                            </LinearLayout>


                            <View
                                android:layout_height="0.5dp"
                                android:layout_width="match_parent"
                                android:background="@color/description_text"/>



                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:paddingRight="13dp"
                                android:paddingLeft="5dp"
                                android:layout_height="match_parent">





                                <LinearLayout
                                    android:background="@drawable/edittxt_gray_line_no_padding"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"

                                    android:gravity="center_vertical"
                                    android:weightSum="4"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">



                                    <EditText
                                        android:background="@android:color/transparent"

                                        android:id="@+id/about_edt"
                                        android:padding="8dp"
                                        android:layout_width="match_parent"
                                        android:lines="7"
                                        android:gravity="top"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/description_text"
                                        android:textSize="16sp" />


                                    <View
                                        android:layout_marginTop="23dp"
                                        android:layout_height="0.5dp"
                                        android:layout_width="match_parent"
                                        android:background="@color/Gray"/>

                                    <LinearLayout
                                        android:paddingLeft="3dp"
                                        android:background="@color/gray2"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="8dp"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" >

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Char count"
                                            android:textColor="@color/Gray"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/wrd_count"
                                            android:layout_marginLeft="3dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="192"
                                            android:textStyle="bold"
                                            android:textColor="@color/description_text"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:layout_marginLeft="3dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" (Min 50)"
                                            android:textColor="@color/Gray"
                                            android:textSize="14sp" />

                                    </LinearLayout>


                                </LinearLayout>



                                <TextView
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="This section will be screened everytime you update it."
                                    android:textColor="@color/description_text"
                                    android:textSize="12sp"
                                    />


                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/update_btn"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="13dp"
                                    android:paddingRight="13dp"
                                    android:paddingTop="8dp"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginBottom="13dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_blue_clr"
                                    android:layout_width="wrap_content">
                                    <TextView
                                        android:layout_weight="1.5"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Update"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="15sp" />
                                </LinearLayout>



                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


            <!--internet code-->

            <include
                layout="@layout/internet_layout"/>

            <!--end internet code-->
        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
