<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



    <LinearLayout

        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Choose Availability"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />


        <RadioGroup
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup1">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10am to 10pm"
                android:id="@+id/radioButton1"
                android:textColor="@color/Gray"
                android:checked="true" />

            <RadioButton
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9am to 4pm"
                android:textColor="@color/Gray"
                android:id="@+id/radioButton2"
                android:checked="false"
                />
            <RadioButton
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4pm to 10pm"
                android:textColor="@color/Gray"
                android:id="@+id/radioButton3"
                android:checked="false"
                />



        </RadioGroup>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Set your own time"
            android:textColor="@color/sky_btn"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Start Time"
                    android:textColor="@color/Gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="10:00am"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:orientation="vertical"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="End Time"
                    android:textColor="@color/Gray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/end_time"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="10:00am"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="@color/LightGrey"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Choose days"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />
        <RadioGroup
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Everyday"
                android:id="@+id/radioButton_d1"
                android:textColor="@color/Gray"
                android:checked="true" />

            <RadioButton
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekdays"
                android:textColor="@color/Gray"
                android:id="@+id/radioButton_d2"
                android:checked="false"
                />
            <RadioButton
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weeekends"
                android:textColor="@color/Gray"
                android:id="@+id/radioButton_d3"
                android:checked="false"
                />



        </RadioGroup>

    </LinearLayout>

    </ScrollView>
</LinearLayout>