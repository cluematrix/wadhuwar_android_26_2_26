<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


<!--    <include layout="@layout/app_bar_layout"/>-->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">
            <LinearLayout

                android:background="@color/gray2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- ViewPager2 for Banner Slider -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/banner_slider1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                    <!-- TabLayout for Dot Indicator -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/dotIndicator"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/banner_slider1"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        app:tabIndicatorGravity="center"
                        />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/progress_bar_banner"
                    android:layout_height="210dp"
                    android:layout_width="match_parent">
                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:layout_height="30dp"
                        android:layout_width="30dp"/>

                </RelativeLayout>





                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:id="@+id/profiles_rv"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/progress_bar_profiles"
                    android:layout_height="210dp"
                    android:layout_width="match_parent">
                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:layout_height="30dp"
                        android:layout_width="30dp"/>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/success_story_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="1dp">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Success Stories"
                            android:textColor="@color/description_text"
                            android:textSize="19sp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Have a look at some of sucess stories from Rashtriya Teli Samaj"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp" />



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/success_story_rv"
                            android:visibility="gone"
                            android:layout_margin="7dp"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/progress_bar_banner_succes_story"
                            android:layout_height="210dp"
                            android:layout_width="match_parent">
                            <ProgressBar
                                android:layout_centerInParent="true"
                                android:layout_height="30dp"
                                android:layout_width="30dp"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/view_all_succes_story"
                            android:background="@drawable/edittxt_gray_line"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View all "
                            android:textColor="@color/main_color_light"
                            android:layout_marginBottom="13dp"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/new_cv"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/progress_bar_news"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:text="News"
                            android:textColor="@color/description_text"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/news_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone" />
                        <TextView
                            android:id="@+id/view_all_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/edittxt_gray_line"
                            android:gravity="center"
                            android:text="View all "
                            android:textColor="@color/main_color_light"
                            android:textSize="16sp" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/contatct_card"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="1dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <!-- First Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For Advertisement Contact Us - "
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <!-- Call Icon -->
                        <ImageView
                            android:id="@+id/ivCall"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_call"
                            android:contentDescription="Call Icon" />

                        <!-- URL / Website Icon -->
                        <ImageView
                            android:id="@+id/ivWebsite"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/ic_web"
                            android:contentDescription="Website Icon" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/advertise_cv"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/progress_bar_advertisement"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:text="Advertise"
                            android:textColor="@color/description_text"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/advertisement_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone" />
                        <TextView
                            android:id="@+id/view_all_advertise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="13dp"
                            android:background="@drawable/edittxt_gray_line"
                            android:gravity="center"
                            android:text="View all "
                            android:textColor="@color/main_color_light"
                            android:textSize="16sp" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/progress_bar"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:layout_height="30dp"
                        android:layout_width="30dp"/>

                </RelativeLayout>
            </LinearLayout>




        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>