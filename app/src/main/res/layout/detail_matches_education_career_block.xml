<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/education_careerLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/education_career_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Education &amp; Career"
        android:textColor="@color/description_text"
        android:textSize="19sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/education_career_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"

        android:elevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="13dp">

            <LinearLayout
                android:id="@+id/educationLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_mortarboard" />

                <TextView
                    android:id="@+id/education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/collegeNameLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:backgroundTint="@color/Red"
                    android:background="@drawable/college" />

                <TextView
                    android:id="@+id/college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/other_educationLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/book_light_blue" />


                <TextView
                    android:id="@+id/other_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Other education ******"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/other_education_lock"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/lock_red" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/occupationLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/studied" />


                <TextView
                    android:id="@+id/occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Occupation ******"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/occupation_lock"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/lock_red" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/post_nameLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_portfolio_filled_hand_drawn_tool" />


                <TextView
                    android:id="@+id/post_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Post Name ******"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/post_name_lock"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/lock_red" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/incomeLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_baseline_money_24" />


                <TextView
                    android:id="@+id/income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textColor="@color/dark_gray"

                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/education_go_premium_now_btn_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/Gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="To unlock Education, Occupation &amp; Post Name"
                    android:textColor="@color/description_text"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/education_go_premium_now_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/curved_rectangle_blue_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="9dp">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Go Premium Now"
                        android:textColor="@color/pharma"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/hobbies_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Hobbies"
        android:textColor="@color/description_text"
        android:textSize="19sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/hobbies_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"

        android:elevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="13dp">

            <LinearLayout
                android:id="@+id/hobbiesLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/hobbies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobbies ******"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/hobbies_lock"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/lock_red" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/hobbies_go_premium_now_btn_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/Gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="To unlock Hobbies"
                    android:textColor="@color/description_text"
                    android:textSize="15sp" />


                <LinearLayout
                    android:id="@+id/hobbies_go_premium_now_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/curved_rectangle_blue_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="9dp">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Go Premium Now"
                        android:textColor="@color/pharma"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>