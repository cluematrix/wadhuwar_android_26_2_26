<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="gone"
    android:id="@+id/contact_detailLL"
    android:paddingBottom="12dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/education_career_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textColor="@color/description_text"
        android:textSize="19sp"
        android:textStyle="bold" />



    <androidx.cardview.widget.CardView
        android:id="@+id/education_career_cv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:elevation="4dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contactLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_circle_no_pading"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/white_phone"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact No."
                        android:textSize="14sp"
                        android:textColor="@color/Gray" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">




                        <TextView
                            android:id="@+id/contact_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="******"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/contact_no_lock"
                            android:layout_marginLeft="8dp"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:background="@drawable/lock_red"
                            />



                    </LinearLayout>






                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="25dp"
                android:id="@+id/whatsappLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_marginTop="5dp"

                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_circle_no_pading"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_whatsapp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="whatsapp No."
                        android:textSize="14sp"
                        android:textColor="@color/Gray" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">




                        <TextView
                            android:id="@+id/whatsapp_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="******"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/whatsapp_no_lock"
                            android:layout_marginLeft="8dp"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:background="@drawable/lock_red"
                            />



                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="25dp"
                android:id="@+id/emailLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_marginTop="5dp"

                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_circle_no_pading"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/white_email"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="@color/Gray" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">




                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="******"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/email_lock"
                            android:layout_marginLeft="8dp"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:background="@drawable/lock_red"
                            />



                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/contact_connect_now_btn_LL"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/Gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To unlock Contact Detail "
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/description_text" />



                <LinearLayout
                    android:id="@+id/contact_connect_now_btn"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_rectangle_blue_border"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp">



                    <TextView
                        android:id="@+id/contact_connect_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Connect Now"
                        android:textColor="@color/pharma"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>