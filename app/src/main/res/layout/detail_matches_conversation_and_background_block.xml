<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="visible"
    android:id="@+id/conversation_background_familyLL"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/conversation_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversation Starters"
        android:textColor="@color/description_text"
        android:textSize="19sp"
        android:textStyle="bold" />



    <androidx.cardview.widget.CardView
        android:id="@+id/conversation_cv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"

        android:elevation="4dp">


        <LinearLayout

            android:id="@+id/converLL"
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lang_status_LL"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lang_status_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/blue_check"
                    />



                <TextView
                    android:id="@+id/lang_status"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/caste_status_LL"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/caste_status_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/blue_check"
                    />



                <TextView
                    android:id="@+id/caste_status"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/state_Status_LL"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/state_Status_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/blue_check"
                    />


                <TextView
                    android:id="@+id/state_Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>










        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/background_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background"
        android:textColor="@color/description_text"
        android:textSize="19sp"
        android:textStyle="bold" />



    <androidx.cardview.widget.CardView
        android:id="@+id/background_cv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"

        android:elevation="4dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/bg_religion_lang_LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/ic_quran"
                    />



                <TextView
                    android:id="@+id/bg_religion_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Religion, Language ******"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/bg_religion_lang_lock"
                    android:layout_marginLeft="8dp"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/lock_red"
                    />


            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/bg_caste_LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/ic_cast"
                    />



                <TextView
                    android:id="@+id/bg_caste"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sampradayLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/sampraday" />


                <TextView
                    android:id="@+id/sampraday_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/rashiLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="@drawable/rashi"
                    />



                <TextView
                    android:id="@+id/rashi_txt"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/background_go_premium_now_btn_LL"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/Gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To unlock Religion &amp; Language"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/description_text" />



                <LinearLayout
                    android:id="@+id/background_go_premium_now_btn"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_rectangle_blue_border"
                    android:paddingLeft="25dp"
                    android:paddingTop="9dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="9dp">



                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Go Premium Now"
                        android:textColor="@color/pharma"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/family_lbl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        android:textColor="@color/description_text"
        android:textSize="19sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/family_cv"
        android:layout_marginBottom="2dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="4dp">


        <LinearLayout
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/family"
                android:justificationMode="inter_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters. "
                android:textColor="@color/dark_gray"
                android:textSize="15sp" />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/seeAllfamilyLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/arrow1"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:adjustViewBounds="true"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:scaleType="centerInside" />




            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>