<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_marginBottom="12dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:id="@+id/imgLL"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/male_avtar"
                android:id="@+id/img"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/LightGrey"/>



            <FrameLayout
                android:orientation="vertical"
                android:visibility="visible"
                android:id="@+id/online_iv"
                android:layout_height="13dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="52dp"
                android:layout_width="13dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_circle"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/online"
                    />

            </FrameLayout>

        </RelativeLayout>



        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/nameLL"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imgLL"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:singleLine="true"

                android:textSize="18sp"/>

            <TextView
                android:id="@+id/msg"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/Gray"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date_time"
                android:text="dfdsfa"
                android:layout_toLeftOf="@+id/new_msg_dot"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/Gray"
                android:textSize="10sp"/>

            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="3dp"
                android:id="@+id/new_msg_dot"
                android:layout_alignParentRight="true"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/sky_blue_circle"
                />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/img"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/Gray"/>


</LinearLayout>