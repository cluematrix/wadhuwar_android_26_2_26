<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/a1"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:text="1"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/gray_circle_progress"/>

    <View

        android:id="@+id/v1"
        android:layout_toRightOf="@+id/a1"
        android:layout_height="0.5dp"
        android:layout_width="10dp"

        android:layout_centerVertical="true"
        android:background="@color/Gray"/>
    <TextView
        android:layout_toRightOf="@+id/v1"
        android:id="@+id/a2"
        android:gravity="center"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:text="2"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/gray_circle_progress"/>

    <View
        android:id="@+id/v3"
        android:layout_toRightOf="@+id/a2"
        android:layout_height="0.5dp"
        android:layout_width="10dp"

        android:layout_centerVertical="true"
        android:background="@color/Gray"/>

    <TextView
        android:layout_toRightOf="@+id/v3"
        android:id="@+id/a3"
        android:gravity="center"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:text="3"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/gray_circle_progress"/>

    <View
        android:id="@+id/v4"
        android:layout_toRightOf="@+id/a3"
        android:layout_height="0.5dp"
        android:layout_width="10dp"

        android:layout_centerVertical="true"
        android:background="@color/Gray"/>

    <TextView
        android:layout_toRightOf="@+id/v4"
        android:id="@+id/a4"
        android:gravity="center"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:text="4"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/gray_circle_progress"/>

    <View
        android:id="@+id/v5"
        android:layout_toRightOf="@+id/a4"
        android:layout_height="0.5dp"
        android:layout_width="10dp"

        android:layout_centerVertical="true"
        android:background="@color/Gray"/>

    <TextView
        android:layout_toRightOf="@+id/v5"
        android:id="@+id/a5"
        android:gravity="center"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:text="5"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/gray_circle_progress"/>
    <View
        android:id="@+id/v6"
        android:layout_toRightOf="@+id/a5"
        android:layout_height="0.5dp"
        android:layout_width="10dp"

        android:layout_centerVertical="true"
        android:background="@color/Gray"/>

    <TextView
        android:layout_toRightOf="@+id/v6"
        android:id="@+id/a6"
        android:gravity="center"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:text="6"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:background="@drawable/gray_circle_progress"/>



</RelativeLayout>